#Create a service

ng generate service proj


#this will create service ts file alongside component files


#check the url from swagger
#we are doing all the work in get method
########################################################################################################################################

#inside proj.service.ts



import { Injectable } from '@angular/core';
import { HttpClient } from '@angular/common/http';
import { Observable } from 'rxjs';

// get all the data, update, delete, create
@Injectable({
  providedIn: 'root'
})
export class ProjService {

  constructor(private httpClient: HttpClient) { }
  getPosts(): Observable<any[]> {
    return this.httpClient.get<any[]>(`https://localhost:44397/api/ProjectMS/api/Project/GetAll`);
  }

  createPost(p_id: number, p_name: string, p_code: string, company_name: string, manager_name: string, start_date: string, end_date: string, Status: string): Observable<any[]>{
    return this.httpClient.get<any[]>("https://localhost:44397/api/ProjectMS/"+p_id+"/"+p_code+"/"+p_name+"/"+company_name+"/"+manager_name+"/"+start_date+"/"+end_date+"/"+Status);
    // https://localhost:44397/api/ProjectMS/37/asdf/asdf/asdf/asfd/2022-12-12/2022-12-12/InProgressx
    //$https://localhost:44397/api/ProjectMS/${p_id}/${p_code}/${p_name}/${company_name}/${manager_name}/${start_date}/${end_date}/${Status}
  }


  updatePost(p_id_u: number, p_name_u: string, p_code_u: string, company_name_u: string, manager_name_u: string, start_date_u: string, end_date_u: string, Status_u: string, dummy: string): Observable<any[]>{

    
    return this.httpClient.get<any[]>("https://localhost:44397/api/ProjectMS/"+p_id_u+"/"+p_code_u+"/"+p_name_u+"/"+company_name_u+"/"+manager_name_u+"/"+start_date_u+"/"+end_date_u+"/"+Status_u+"/"+dummy);
    // https://localhost:44397/api/ProjectMS/37/asdf/asdf/asdf/asfd/2022-12-12/2022-12-12/InProgressx
   
    //https://localhost:44397/api/ProjectMS/45/abir/abir/abir/abir/2012-12-12/2022-12-12/abir/abir
  }


  deletePost(delete_id: number ): Observable<any[]>{

    
    return this.httpClient.get<any[]>("https://localhost:44397/api/ProjectMS/"+delete_id);
    
  }
}










###########################################################################################################################################################################




##########    app.module.ts

import { NgModule } from '@angular/core';
import { BrowserModule } from '@angular/platform-browser';

import { AppRoutingModule } from './app-routing.module';
import { AppComponent } from './app.component';

import { ProjService } from './proj.service';
import { HttpClientModule } from '@angular/common/http';
import { FormsModule } from '@angular/forms';

@NgModule({
  declarations: [
    AppComponent
  ],
  imports: [
    BrowserModule,
    AppRoutingModule,
    HttpClientModule,
    FormsModule
  ],
  providers: [ProjService],
  bootstrap: [AppComponent]
})
export class AppModule { }




