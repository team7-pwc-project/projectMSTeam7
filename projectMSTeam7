######################            app.component.ts



import { Component, OnInit } from '@angular/core';
import { ProjService } from './proj.service';
import { HttpClient } from '@angular/common/http';

@Component({
  selector: 'app-root',
  templateUrl: './app.component.html',
  styleUrls: ['./app.component.css']
})
export class AppComponent implements OnInit {
  public projs: any[] = [{}];


  //public p_id: string 

  //
  constructor(private proj: ProjService) {
    this.proj.getPosts().subscribe((data: any[]) => {
      this.projs = data;
      console.log(data);
    });
  }




  public p_id: number = 0;
  public p_code: string = "";
  public p_name: string = "";
  public company_name: string = "";
  public manager_name: string = "";
  public start_date: string = "";
  public end_date: string = "";
  public Status: string = "";

  createFun(): void{
    this.proj.createPost(this.p_id, this.p_code, this.p_name, this.company_name, this.manager_name, this.start_date, this.end_date, this.Status).subscribe((data: any[]) => {
      this.projs = data;
      console.log(data);
  });


  
  }



 // p_id_u+"/"+p_code_u+"/"+p_name_u+"/"+company_name_u+"/"+manager_name_u+"/"+start_date_u+"/"+end_date_u+"/"+Status_u+"/"+dummy_u
 public p_id_u: number = 0;
 public p_code_u: string = "";
 public p_name_u: string = "";
 public company_name_u: string = "";
 public manager_name_u: string = "";
 public start_date_u: string = "";
 public end_date_u: string = "";
 public Status_u: string = "";
  public dummy: string = "";
 updateFun(): void{
  this.proj.updatePost(this.p_id_u, this.p_code_u, this.p_name_u, this.company_name_u, this.manager_name_u, this.start_date_u, this.end_date_u, this.Status_u, this.dummy).subscribe((data: any[]) => {
    this.projs = data;
    console.log(data);
});


// this.proj.getPosts().subscribe((data: any[]) => {
//   this.projs = data;
//   console.log(data);
// });
}


public delete_id: number = 0;
deleteFun(): void{
  this.proj.deletePost(this.delete_id).subscribe((data: any[]) => {
    this.projs = data;
    console.log(data);
});


// this.proj.getPosts().subscribe((data: any[]) => {
//   this.projs = data;
//   console.log(data);
// });

}



  ngOnInit() { }

}


